{
    "compilerOptions": {
        "outDir": "dist/js",
        "target": "ES6",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "removeComments": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["ES5","ES6","DOM","DOM.Iterable"],
        "sourceMap": true //enables debug features, do not use in production
    },
    "include": ["src/**/*"]
}